---
import { fetchCursosYUsuarios } from '../lib/firebase.js'
import HomePage from '../components/HomePage.jsx'
import CourseFilter from '../components/CourseFilter.jsx'
import Hero from '../components/Hero.jsx'
import WhyStudyWithUs from '../components/Relleno1.astro'
import Contact from '../components/Contact.astro'
import Footer from '../components/Footer.astro'
// Obtenemos los datos de Firebase
const { cursos, usuarios } = await fetchCursosYUsuarios()
/* console.log("Cursos from Firebase:", cursos)
console.log("Usuarios from Firebase:", usuarios) */
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Web Cursos</title>
    <link rel="stylesheet" href="../../styles/global.css" />
  </head>
  <body class="bg-white">
    <HomePage client:load cursos={cursos} usuarios={usuarios} showHero={true} />
    <WhyStudyWithUs />
    <CourseFilter client:load cursos={cursos} />
    <Contact />
    <Footer />
    <button id="back-to-top" class="fixed bottom-10 right-14 p-4 transition-all duration-300 opacity-0 translate-y-2 invisible animate-bounce" aria-label="Back to top">
      <img src="/img/arrow-upRed.png" alt="Flecha subir" class="w-14 h-14"/>
    </button>
    <script type="module" src="/backToTop.js"></script>
  </body>
</html>
